<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--今日天气界面-->
    <RelativeLayout
        android:id="@+id/weather_today"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="#8000">
        <!--城市、天气类型和温度-->
        <LinearLayout
            android:id="@+id/weather_today_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">
            <!--&lt;!&ndash;城市名称&ndash;&gt;
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"/>-->
            <!--当前温度-->
            <TextView
                android:id="@+id/temperature"
                android:layout_below="@+id/weather_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="21°"
                android:textSize="55.0sp"
                android:textColor="@android:color/white"/>
            <!--天气状况-->
            <TextView
                android:id="@+id/weather_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="小雪"
                android:textSize="20.0sp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
        <!--pm2.5-->
        <LinearLayout
            android:id="@+id/pm2_5_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weather_today_data"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <!--pm2.5详情-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_radius"
                android:paddingLeft="10dp" android:paddingRight="10dp"
                android:paddingTop="2dp" android:paddingBottom="2dp"
                android:orientation="horizontal">
                <!--pm2.5数值-->
                <TextView
                    android:id="@+id/pm25_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>
                <!--空气质量情况-->
                <TextView
                    android:id="@+id/pm25_quality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="轻度污染"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
        <!--湿度和风力-->
        <LinearLayout
            android:layout_below="@+id/pm2_5_content"
            android:id="@+id/wind_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <!--风力信息-->
            <TextView
                android:id="@+id/wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="微风"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
            <!--风力等级-->
            <TextView
                android:id="@+id/wind_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="2级"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="湿度"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
            <!--湿度数值-->
            <TextView
                android:id="@+id/humdity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <!--今日日期-->
        <LinearLayout
            android:layout_below="@+id/wind_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="今天"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:id="@+id/textView" />
            <!--星期几-->
            <TextView
                android:id="@+id/today_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期六"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <!--温度范围-->
        <TextView
            android:id="@+id/temperature_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-2°~5°"
            android:textSize="20.0sp"
            android:textColor="@android:color/white"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>