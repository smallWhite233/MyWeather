<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="#4052B5"
        android:gravity="center_vertical">
        <!---选择城市-->
    <ImageView
        android:id="@+id/title_city_manager"
        android:layout_width="45.0dip"
        android:layout_height="45.0dip"
        android:src="@drawable/title_city"/>
    <!--<ImageView
        android:id="@+id/city_seperator"
        android:layout_width="1.0dip"
        android:layout_height="40dip"
        android:layout_marginTop="2.0dip"
        android:layout_toRightOf="@id/title_city_manager"
        android:background="#FFFFFF"	/>-->
    <TextView
        android:id="@+id/title_city_name"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/title_city_manager"
        android:gravity="center_vertical"
        android:paddingLeft="5dip"
        android:text="北京天气"
        android:textColor="#ffffffff"
        android:textSize="22.0sp"/><!---城市天气标题-->
    <ImageView
        android:id="@+id/title_update_btn"
        android:layout_width="45.0dip"
        android:layout_height="45.0dip"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:src="@drawable/title_update"
        android:visibility="visible"	/><!--刷新-->
    <!--<ImageView<-分享按钮->
        android:id="@+id/title_share"
        android:layout_width="45.0dip"
        android:layout_height="45.0dip"
        android:layout_toLeftOf="@id/title_update_btn"
        android:src="@drawable/title_share"/>-->
    <ImageView
        android:id="@+id/title_location"
        android:layout_width="45.0dip"
        android:layout_height="45.0dip"
        android:layout_toLeftOf="@id/title_update_btn"
        android:src="@drawable/base_action_bar_action_city"/><!--定位-->
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <!--天气信息-->
        <RelativeLayout
            android:id="@+id/weather_today"
            android:layout_width="fill_parent"
            android:layout_height="315dp"
            android:paddingLeft="20.0dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:background="#BBBBBB">
            <!--城市名称-->
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="北京"
                android:textSize="30.0sp"
                android:textColor="#FFFFFF"/>
            <!---今日天气信息-->
            <RelativeLayout
                android:id="@+id/weather_today_data"
                android:layout_below="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dp"
                android:layout_centerHorizontal="true">
                <!--天气状况-->
                <TextView
                    android:id="@+id/condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="晴"
                    android:textSize="20.0sp"/>
                <!--温度范围-->
                <TextView
                    android:id="@+id/temperature"
                    android:layout_below="@+id/condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="-2°~5°"
                    android:textSize="40.0sp"
                    android:textColor="@android:color/white"/>
                <!--风力信息-->
                <TextView
                    android:id="@+id/wind"
                    android:layout_below="@+id/temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="微风"
                    android:textSize="20sp"/>
            </RelativeLayout>
            <!--pm2.5-->
            <LinearLayout
                android:id="@+id/pm2_5_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weather_today_data"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="50dp"
                android:orientation="vertical">
                <!--pm2.5-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pm2.5"
                    android:textSize="20sp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@android:color/white"
                    />
                <!--pm2.5详情-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_radius"
                    android:paddingLeft="10dp" android:paddingRight="10dp"
                    android:paddingTop="2dp" android:paddingBottom="2dp"
                    android:orientation="horizontal">
                    <!--pm2.5数值-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textSize="20dp"
                        android:textColor="@android:color/white"/>
                    <!--空气情况-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="轻度污染"
                        android:textSize="20sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>
            <!--湿度情况-->
            <LinearLayout
                android:id="@+id/humidity"
                android:layout_below="@+id/weather_today_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="湿度:"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"/>
                <!--湿度数值-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <!--今日日期-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pm2_5_content"
                android:layout_marginTop="20dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="今天"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"/>
                <!--星期几-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期六"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </RelativeLayout>
        <!--未来天气信息-->
        <RelativeLayout
            android:layout_below="@id/weather_today"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/weather_future"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:paddingTop="10dp"
                android:orientation="horizontal">
            <!--未来一天-->
            <LinearLayout
            android:id="@+id/future_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
            android:orientation="vertical">
            <!--日期-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期日"
                android:textSize="20dp"
                android:textColor="@android:color/white"/>
            <!--天气状况图片-->
            <ImageView
                android:id="@+id/future_one_sunny"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/sunny"/>
            <!--温度范围-->
            <TextView
                android:id="@+id/future_one_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-2°~5°"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>
            </LinearLayout>
            <!--未来两天-->
            <LinearLayout
                android:id="@+id/future_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <!--日期-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期一"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"/>
                <!--天气状况图片-->
                <ImageView
                    android:id="@+id/future_two_sunny"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/sunny"/>
                <!--温度范围-->
                <TextView
                    android:id="@+id/future_two_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-2°~5°"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <!--未来三天-->
            <LinearLayout
                android:id="@+id/future_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <!--日期-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期二"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"/>
                <!--天气状况图片-->
                <ImageView
                    android:id="@+id/future_three_sunny"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/sunny"/>
                <!--温度范围-->
                <TextView
                    android:id="@+id/future_three_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-2°~5°"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <!--未来四天-->
            <LinearLayout
                android:id="@+id/future_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--日期-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期三"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"/>
                <!--天气状况图片-->
                <ImageView
                    android:id="@+id/future_four_sunny"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/sunny"/>
                <!--温度范围-->
                <TextView
                    android:id="@+id/future_four_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-2°~5°"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
